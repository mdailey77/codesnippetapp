@model IEnumerable<CodeSnippetApplication.Models.CodeSnippet>

@{
    ViewBag.Title = "EditList";
}

<h2>Code Snippet List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SnippetName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SnippetCode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SnippetName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SnippetCode)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id })<br />
            @Html.ActionLink("Details", "Details", new { id=item.Id })<br />
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
