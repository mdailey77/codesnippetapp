@model CodeSnippetApplication.Models.CodeSnippet

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.SnippetName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.SnippetName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SnippetName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SnippetCode, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.SnippetCode, new { @class = "form-control", @cols = 90, @rows = 20 })
                @Html.ValidationMessageFor(model => model.SnippetCode)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "EditList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
